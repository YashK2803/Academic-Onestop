<%- include('../partials/header') %>
<%- include('../partials/navbar', { user: user }) %>

<div class="container mt-4">
  <h2>Assignments Management</h2>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Class</th>
        <th>Due Date</th>
        <th>Submissions</th>
      </tr>
    </thead>
    <tbody>
      <% assignments.forEach(function(a) { %>
        <tr>
          <td><%= a.title %></td>
          <td><%= a.classId %></td>
          <td><%= new Date(a.dueDate).toDateString() %></td>
          <td><%= a.submissions.length %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <div class="text-end">
    <a href="/teacher/assignments/create" class="btn btn-danger mt-4">Create New Assignment</a>
  </div>
</div>

<%- include('../partials/footer') %>
