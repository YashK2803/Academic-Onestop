<%- include('../partials/header') %>
<%- include('../partials/navbar', { user: user }) %>

<div class="container mt-4">
  <h2>Academic Calendar</h2>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% events.forEach(function(e) { %>
        <tr>
          <td><%= e.title %></td>
          <!-- Format the date properly -->
          <td><%= new Date(e.eventDate).toLocaleDateString('en-GB') %></td> <!-- Assuming you want dd/mm/yyyy format -->
          <td><%= e.description %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <div class="text-right">
    <a href="/admin/calendar/addEvent" class="btn btn-primary mt-3">Add Event</a>
  </div>
</div>

<%- include('../partials/footer') %>
