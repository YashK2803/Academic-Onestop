<%- include('../partials/header') %>
<%- include('../partials/navbar', { user: user }) %>
<div class="container mt-4">
  <h2>Assignments</h2>
  <a href="/admin/assignments/add" class="btn btn-primary mb-3">Add Assignment</a>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Class</th>
        <th>Due Date</th>
        <th>Created By</th>
        <th>Submissions</th>
      </tr>
    </thead>
    <tbody>
      <% assignments.forEach(function(a) { %>
        <tr>
          <td><%= a.title %></td>
          <td><%= a.classId %></td>
          <td><%= a.dueDate.toDateString() %></td>
          <td><%= a.createdByName || '' %></td>
          <td><%= a.submissionCount || 0 %></td>

        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../partials/footer') %>
