<%- include('./partials/header') %>
<%- include('./partials/navbar', { user: user }) %>
<div class="container mt-5">
  <div class="alert alert-danger text-center">
    <h2>Error</h2>
    <p>
      <%= typeof message !== 'undefined' ? message : 'An unexpected error occurred. Please try again later.' %>
    </p>
    <% if (typeof error !== 'undefined' && error.status) { %>
      <p>Status code: <%= error.status %></p>
    <% } %>
    <% if (typeof error !== 'undefined' && error.stack && process.env.NODE_ENV !== 'production') { %>
      <pre class="text-left"><%= error.stack %></pre>
    <% } %>
    <a href="/" class="btn btn-primary mt-3">Go to Home</a>
  </div>
</div>
<%- include('./partials/footer') %>
